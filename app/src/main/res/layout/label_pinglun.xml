<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="#ffffffff"
    android:id="@+id/haoyou">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/touxiang_pinglun"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/avatar_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView27"
        android:layout_marginRight="16dp"
        android:textColor="#ffe87a83"
        android:layout_marginEnd="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView4"
        android:textSize="17dp"
        android:layout_alignTop="@+id/touxiang_pinglun"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/imageView119"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView107"
        android:layout_alignStart="@+id/textView107"
        android:layout_alignBottom="@+id/profile_image"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:singleLine="false"
        android:textColor="#ff707070"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_alignBottom="@+id/touxiang_pinglun"
        android:layout_toRightOf="@+id/touxiang_pinglun"
        android:layout_toEndOf="@+id/touxiang_pinglun" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView29"
        android:textColor="#ff707070"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView27" />

</RelativeLayout>